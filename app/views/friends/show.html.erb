
<%= render @friend %>

<%if @friend.user==current_user%>
<div class="row mt-3">
<div class="col-md-3">
  <%= link_to "Edit this friend", edit_friend_path(@friend),class:"btn btn-warning" %>
</div>

<div class="col-md-3">
 <%= link_to "Back to friends", friends_path,class:"btn btn-success" %>
</div>
 <div class="col-md-3">
 <%= button_to "Destroy this friend", @friend, method: :delete,class:"btn btn-danger" %>
 </div>
</div>
<%end%>
